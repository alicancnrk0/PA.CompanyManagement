{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "expenseRoute": {
        "ClusterId": "accounting-cluster",
        "Match": {
          "Path": "api/mt/ex/{**mtex}"
        },
        "Transforms": [
          { "PathPattern": "expense/{**mtex}" }
        ]
      },
      "incomeRoute": {
        "ClusterId": "accounting-cluster",
        "Match": {
          "Path": "api/mt/ic/{**mtic}"
        },
        "Transforms": [
          { "PathPattern": "income/{**mtic}" }
        ]
      },
      "expenseTypeRoute": {
        "ClusterId": "accounting-cluster",
        "Match": {
          "Path": "api/ty/ex/{**tyex}"
        },
        "Transforms": [
          { "PathPattern": "expense-type/{**tyex}" }
        ]
      },
      "incomeTypeRoute": {
        "ClusterId": "accounting-cluster",
        "Match": {
          "Path": "api/ty/ic/{**tyic}"
        },
        "Transforms": [
          { "PathPattern": "income-type/{**tyic}" }
        ]
      },
      "employeeRoute": {
        "ClusterId": "employee-cluster",
        "Match": {
          "Path": "api/emp/{**emp}"
        },
        "Transforms": [
          { "PathPattern": "{**emp}" }
        ]
      }
    },
    "Clusters": {
      "accounting-cluster": {
        "Destinations": {
          "default": {
            "Address": "https://localhost:7151/api"
          }
        }
      },
      "employee-cluster": {
        "Destinations": {
          "default": {
            "Address": "https://localhost:7177/api/employee"
          }
        }
      }
    }
  }
}