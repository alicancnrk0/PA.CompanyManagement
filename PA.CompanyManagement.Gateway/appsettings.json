{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "expenseRoute": {
        "ClusterId": "accounting-cluster",
        "Match": {
          "Path": "expense/{**catch-all}"
        }
      },
      "incomeRoute": {
        "ClusterId": "accounting-cluster",
        "Match": {
          "Path": "inc/{**inc}"
        },
        "Transforms": [
          { "PathPattern": "income/{**inc}" }
        ]
      }
    },
    "Clusters": {
      "accounting-cluster": {
        "Destinations": {
          "default": {
            "Address": "https://localhost:7151/api/"
          }
        }
      }
    }
  }
}
